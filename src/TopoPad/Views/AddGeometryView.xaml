<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TopoPad.Views.AddGeometryView">
    <DockPanel Margin="10">
        <Button DockPanel.Dock="Right" VerticalAlignment="Top" Margin="10,0,0,0"
                Command ="{Binding AddGeometry}">Add Geometry</Button>
        <TextBox AcceptsReturn="True" Text="{Binding GeometryText}"></TextBox>
    </DockPanel>
</UserControl>
